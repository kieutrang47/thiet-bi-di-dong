<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10px"
    android:background="@android:drawable/bottom_bar"
    android:backgroundTint="@color/design_default_color_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#000000"
        android:text="Test"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="Quan Ly Album"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThemAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:background="@android:drawable/bottom_bar"
        android:text="Them Album"
        app:backgroundTint="#C1BABA" />

    <Button
        android:id="@+id/btnXemAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:background="@android:drawable/bottom_bar"
        android:text="Xem danh sach Album"
        app:backgroundTint="#C1BABA" />

    <Button
        android:id="@+id/btnQuanLyBaiHat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:background="@android:drawable/bottom_bar"
        android:text="Quan Ly Bai Hat"
        app:backgroundTint="#C1BABA" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#070707"
    android:backgroundTint="#121212"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#848285"
                    android:text="New contact"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:cardCornerRadius="12dp"
                android:padding="10px">

                <TextView
                    android:id="@+id/textViewMobile"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:background="#F8F8F8"
                    android:gravity="center"
                    android:text="Mobile"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    tools:ignore="RtlCompat" />

                <EditText
                    android:id="@+id/editTextPhoneNum"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Phone number"
                    android:textColor="#7E7979"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"

                    app:cornerRadius="0dp"
                    app:icon="@android:drawable/ic_delete"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#434443"
                    android:text="Send email"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10px">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="99dp"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:background="#F8F8F8"
                    android:gravity="center"
                    android:text="Home"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds,RtlCompat" />

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_weight="1"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="text"
                    android:text="Email address"
                    android:textColor="#7E7979"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"

                    android:textColor="@android:color/black"

                    app:cornerRadius="0dp"
                    app:icon="@android:drawable/ic_delete"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#434443"
                    android:text="Other Information"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="100px"
                    android:layout_weight="1"
                    android:text="Ringtone"
                    android:textColor="#FBFAFA"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/Spinner"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Send calls directly to voicemail."
                    android:textColor="#FDFDFD"
                    android:textSize="20sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#121212"
                    android:textColor="@android:color/black"

                    app:cornerRadius="0dp"
                    app:icon="@android:drawable/checkbox_on_background"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="24dp"
                    app:iconTint="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:text="More info"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:cornerRadius="0dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconPadding="-220dp"
                    app:iconSize="24dp"
                    app:iconTint="@null" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A89E9E"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:backgroundTint="@android:color/white"
                    android:text="Save"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:cornerRadius="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:backgroundTint="@android:color/white"
                    android:text="Discard changes"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:cornerRadius="0dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

